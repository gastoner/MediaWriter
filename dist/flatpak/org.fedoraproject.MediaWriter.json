{
    "id": "org.fedoraproject.MediaWriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.2",
    "sdk": "org.kde.Sdk",
    "command": "mediawriter",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--env=QML2_IMPORT_PATH=/app/lib/qt6/qml"
    ],
    "modules": [
        {
            "name": "Adwaita-qt",
            "buildsystem": "cmake",
            "config-opts": ["-DUSE_QT6=ON"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FedoraQt/adwaita-qt.git"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's@add_subdirectory(style)@#add_subdirectory(style)@' src/CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "MediaWriter",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/gastoner/MediaWriter.git",
                    "branch": "qt6"
                },
                {
                    "type": "shell",
                    "commands": [
                        "rm -rf app/data/icons/hicolor/1024x1024",
                        "sed -i 's@\${QT6_INSTALL_QML}@/app/lib/qt6/qml@' src/theme/CMakeLists.txt"
                    ]
                 }
            ]
        }
    ]
}
